<Page
    x:Class="PoliceStationNew.XAML.EmployeePage.Accounting.AddPrize"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PoliceStationNew.XAML.EmployeePage.Accounting"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <ComboBox x:Name="Emp" PlaceholderText="Сотрудник" FontSize="30" HorizontalAlignment="Center" Margin="0,431,0,0" Width="199" SelectionChanged="Emp_SelectionChanged"/>
        <TextBlock x:Name="Number" Text="Номер" FontSize="30" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="1099,437,0,0"></TextBlock>
        <TextBox x:Name="Prize" PlaceholderText="Премия" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Width="199"></TextBox>
        <Button x:Name="Confirm" Content="Подвтердить" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,617,0,0" FontSize="30" Click="Confirm_Click"></Button>
    </Grid>
</Page>
