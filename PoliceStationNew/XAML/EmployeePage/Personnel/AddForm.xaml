<Page
    x:Class="PoliceStationNew.XAML.EmployeePage.Personnel.AddForm"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PoliceStationNew.XAML.EmployeePage.Personnel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <TextBox x:Name="FormName" PlaceholderText="Наименование образования" VerticalAlignment="Top" HorizontalAlignment="Center" Width="415" FontSize="30" Margin="0,328,0,0"></TextBox>
        <ComboBox x:Name="Type" PlaceholderText="Тип образования" FontSize="30" HorizontalAlignment="Center" Margin="0,415,0,0" Width="415"/>
        <Button x:Name="Confirm" Content="Подтвердить" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" Click="Confirm_Click"></Button>
    </Grid>
</Page>
